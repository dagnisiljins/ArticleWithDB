{% include 'Partials/base.twig' %}

<section class="main-content">
    <h1>Edit Article</h1>
    <form action="/edit" method="post">
        <input type="hidden" name="id" value="{{ article.getId() }}">

        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required value="{{ article.getTitle() }}">
        </div>
        <div>
            <label for="description">Description:</label>
            <input type="text" id="description" name="description" required value="{{ article.getDescription() }}">
        </div>
        <div>
            <label for="text">Text:</label>
            <textarea id="text" name="text" required>{{ article.getText() }}</textarea>
        </div>
        <button type="submit">Update</button>
    </form>
</section>

